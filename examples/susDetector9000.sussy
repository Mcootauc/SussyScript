task susDetector(name, sussynessLevel) {
    sus(sussynessLevel > 100) {
        report name + " is looking really suspicious!"
    } mega sus(sussynessLevel > 50) {
        report "I don't know, " + name + " is looking a little sus..."
    } mega {
        report "I literally saw " + name + " do Med Bay, I think they're in the clear!"
    }
}

susDetector("Red", 999)
